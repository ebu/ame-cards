<?xml version="1.0" encoding="UTF-8"?>
<!-- Werner Bailer (JOANNEUM RESEARCH) -->
<FIMSAMECards xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../schema/FIMS-AME.xsd">
	<AMECard>
		<CardID>T003</CardID>
		<Name>Keyword extraction</Name>
		<Type>Text</Type>
		<Status>draft</Status>
		<Editor>Lauri</Editor>
		<Definition>The identification of the most relevant words in a text.</Definition>
		<Parameters>
			<Inputs>
				<!-- no input params, assuming the text is provided as a resource to the FIMS service
				<Input>
					<Name>InputText</Name>
					<Type>text</Type>
					<Representation>TBD, could also be XML</Representation>
					<Definition>The input text to be processed (required)</Definition>
				</Input>		
				-->
			</Inputs>
			<Outputs>
				<Output mandatory="true">
					<Name>Keywords</Name>
					<Type>xml</Type>
					<Representation>urn:tbd</Representation>
					<Definition>A list of keywords, for each the amount of occurrences and a confidence score</Definition>
				</Output>
			</Outputs>
		</Parameters>
		<CapabilityGroup name="Text Types">
			<Capability>
				<Values>urn:oiweuowieru</Values>
				<Type>supported languages</Type>
			</Capability>
		</CapabilityGroup>
		
		<CapabilityGroup name="input formats">
			<Capability>
				<Values>urn:cvds</Values>
				<Type>supported text formats</Type>
			</Capability>
		</CapabilityGroup>
		
	</AMECard>
</FIMSAMECards>

<FIMSAMECards xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../schema/FIMS-AME.xsd">
	<AMECard>
		<CardID>V005</CardID>
		<Name>Object classification</Name>
		<Type>Video</Type>
		<Status>draft</Status>
		<Editor>Lauri</Editor>
		<Definition>Determine if there are one or more regions showing (part of) a specified/one from a list of specified object class(es), and report their approximate boundaries.</Definition>
		<Parameters>
			<Inputs>
				<Input mandatory="true">
					<Name>ClassesToDetect</Name>
					<Type>xml</Type>
					<Representation/>
				</Input>
				<Input mandatory="true">
					<Name>MinimumObjectSizeToDetect</Name>
					<Type>integer</Type>
					<Representation/>
					<Unit>pixels</Unit>
				</Input>
				<Input>
						<Name>ObjectModelToUse</Name>
					<Type>URL</Type>
					<Definition>If applicable, visual model to use for detection.</Definition>
				</Input>
				<Input>
					<Name>BoundingBox</Name>
					<Type>text</Type>
					<Definition>A bounding box, specified as space separated list of x,y,w,h in pixels.</Definition>
				</Input>
			</Inputs>
			<Outputs>
				<Output mandatory="true">
					<Name>DetectedRegions</Name>
					<Type>xml</Type>
					<Representation>urn:mpeg:mpeg7:part5:MovingRegionType</Representation>
					<Definition>Per object class, a list of time indexed regions</Definition>
				</Output>
				<Output>
					<Name>Confidence</Name>
					<Type>float</Type>
				</Output>
			</Outputs>
		</Parameters>
		<CapabilityGroup name="object classes">
			<Capability>
				<Values>urn:oiweuowieru</Values>
				<Type>supported object classes</Type>
			</Capability>
			<Capability>
				<Values>urn:jhfkjsdhs</Values>
				<Type>minimum object size</Type>
				<Unit>pixel</Unit>
			</Capability>
		</CapabilityGroup>
		<CapabilityGroup name="input formats">
			<Capability>
				<Values>urn:cvds</Values>
				<Type>supported video formats</Type>
			</Capability>
			<Capability>
				<Values>urn:sdhfsdjkfh</Values>
				<Type>supported image formats</Type>
			</Capability>
		</CapabilityGroup>
	</AMECard>
</FIMSAMECards>

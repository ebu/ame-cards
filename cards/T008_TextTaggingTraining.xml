	<AMECard>
		<CardID>T008</CardID>
		<Name>Text tagging training</Name>
		<Type>Text</Type>
		<Status>draft</Status>
		<Editor>Lauri</Editor>
		<Definition>Training module for a text tagging system</Definition>
		<Parameters>
			<Inputs>
				<Input>
					<Name>ClassificationData</Name>
					<Type>xml</Type>
					<Definition>Training data identifying tags to be trained, and with locators to texts to be used for training each tag.</Definition>
				</Input>
			</Inputs>
			<Outputs>
				<Output>
					<Name>TrainedTaggingModelReference</Name>
					<Type>URL</Type>
				</Output>			
				<Output>
					<Name>WasTrainingSuccess</Name>
					<Type>text</Type>
					<Representation/>
				</Output>
			</Outputs>
		</Parameters>
